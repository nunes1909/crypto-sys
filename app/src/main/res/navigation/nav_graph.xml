<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coinsFragment">

    <fragment
        android:id="@+id/coinsFragment"
        android:name="com.gabriel.crypto_sys.ui.fragment.CoinsFragment"
        android:label="FragmentCoins">
        <action
            android:id="@+id/acaoCoinsParaDetalhes"
            app:destination="@id/fragmentDetalhes"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/carteiraFragment"
        android:name="com.gabriel.crypto_sys.ui.fragment.CarteiraFragment"
        android:label="FragmentCarteira" >
        <action
            android:id="@+id/acaoCarteiraParaDetalhes"
            app:destination="@id/fragmentDetalhes"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/fragmentDetalhes"
        android:name="com.gabriel.crypto_sys.ui.fragment.FragmentDetalhes"
        android:label="FragmentDetalhes" />
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.gabriel.crypto_sys.ui.fragment.FragmentLogin"
        android:label="FragmentLogin" >
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentCadastro"
            app:destination="@id/fragmentCadastro" />
        <action
            android:id="@+id/acaoLoginParaCoins"
            app:destination="@id/coinsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fragmentLogin"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentCadastro"
        android:name="com.gabriel.crypto_sys.ui.fragment.FragmentCadastro"
        android:label="FragmentCadastro" />
    <action
        android:id="@+id/acaoGlobalParaLogin"
        app:destination="@id/fragmentLogin"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/coinsFragment"
        app:popUpToInclusive="true" />
</navigation>